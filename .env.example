# ============================================
# Private Renewable Energy Market Configuration
# ============================================

# ----------------
# Deployment Keys
# ----------------

# Private Key for Deployment (DO NOT COMMIT YOUR ACTUAL PRIVATE KEY)
# Generate a new wallet for deployment: https://metamask.io
PRIVATE_KEY=your_wallet_private_key_here

# Pauser Address (for emergency pause functionality)
# This address can pause the contract in case of emergency
PAUSER_ADDRESS=your_pauser_wallet_address_here

# Owner Address (contract owner, defaults to deployer if not set)
OWNER_ADDRESS=your_owner_wallet_address_here

# ----------------
# Network Configuration
# ----------------

# Sepolia Testnet RPC URL
# Get free RPC from: https://www.alchemy.com or https://infura.io
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Mainnet RPC URL (for future production deployment)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Local Network (Hardhat)
LOCAL_RPC_URL=http://127.0.0.1:8545

# ----------------
# Contract Verification
# ----------------

# Etherscan API Key for Contract Verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ----------------
# Gas & Performance
# ----------------

# Enable Gas Reporting (true/false)
REPORT_GAS=false

# Gas Price (in gwei) - auto uses network gas price
GAS_PRICE=auto

# Gas Limit for Transactions
GAS_LIMIT=8000000

# ----------------
# Deployment Info
# ----------------

# Deployed Contract Address (auto-filled after deployment)
CONTRACT_ADDRESS=

# Deployment Network (sepolia, mainnet, localhost)
DEPLOYMENT_NETWORK=sepolia

# ----------------
# Security Settings
# ----------------

# Enable Security Checks (true/false)
ENABLE_SECURITY_CHECKS=true

# Audit Mode - Additional logging for security audits
AUDIT_MODE=false

# Maximum Transaction Value (in ETH) - DoS protection
MAX_TRANSACTION_VALUE=10

# Rate Limiting (requests per minute)
RATE_LIMIT=100

# ----------------
# Monitoring & Alerts
# ----------------

# Codecov Token (for coverage reporting)
CODECOV_TOKEN=your_codecov_token_here

# Slack Webhook (for deployment notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Webhook (for alerts)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK

# ----------------
# Development Settings
# ----------------

# Node Environment (development, production, test)
NODE_ENV=development

# Enable Debug Mode
DEBUG=false

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ----------------
# Frontend Configuration
# ----------------

# API Base URL
API_BASE_URL=http://localhost:3000

# Frontend Port
FRONTEND_PORT=3000

# Enable Hot Reload
HOT_RELOAD=true

# ----------------
# Testing Configuration
# ----------------

# Test Network
TEST_NETWORK=hardhat

# Enable Coverage
ENABLE_COVERAGE=true

# Test Timeout (milliseconds)
TEST_TIMEOUT=200000

# ----------------
# CI/CD Configuration
# ----------------

# CI/CD Provider (github, gitlab, circleci)
CI_PROVIDER=github

# Auto Deploy on Merge (true/false)
AUTO_DEPLOY=false

# Deploy Branch
DEPLOY_BRANCH=main

# ----------------
# Optional Services
# ----------------

# IPFS API Key (for metadata storage)
IPFS_API_KEY=

# Pinata API Key (IPFS pinning service)
PINATA_API_KEY=
PINATA_SECRET_KEY=

# The Graph API Key (for indexing)
GRAPH_API_KEY=

# ----------------
# Performance Optimization
# ----------------

# Enable Compiler Optimization
OPTIMIZER_ENABLED=true

# Optimizer Runs (higher = more expensive deploy, cheaper execution)
OPTIMIZER_RUNS=200

# Enable Code Splitting
CODE_SPLITTING=true

# Bundle Size Limit (KB)
BUNDLE_SIZE_LIMIT=500

# ----------------
# Emergency Controls
# ----------------

# Emergency Pause Enabled
EMERGENCY_PAUSE_ENABLED=true

# Emergency Contact Email
EMERGENCY_CONTACT=security@your-domain.com

# Incident Response URL
INCIDENT_RESPONSE_URL=https://your-domain.com/security

# ============================================
# End of Configuration
# ============================================
